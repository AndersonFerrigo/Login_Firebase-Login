<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".content.aluno.ui.duvidas_atividade.DuvidasAtividadesConcluidasFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp">

            <TextView
                android:id="@+id/txt_nome_professor_duvida_atividade"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/nome_professor_cadastro_atividades"
                android:textSize="20sp"
                android:textColor="@color/baseThemeColor"/>

            <TextView
                android:id="@+id/txt_materia_professor_duvida_atividade"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/materia_professor_cadastro_atividades"
                android:textSize="20sp"
                android:textColor="@color/baseThemeColor"/>

            <EditText
                android:id="@+id/edt_titulo_atividade_concluida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:hint="@string/titulo_duvidas_atividade_recebido"
                android:textColor="@color/baseThemeColor"
                android:textColorHint="@color/baseThemeColor"/>

            <ImageView
                android:id="@+id/img_materia_professor_ic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/team"
                android:layout_marginTop="190dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>

            <Spinner
                android:id="@+id/spn_materia_professor"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="190dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/edt_duvidas_atividades_enviada"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="260dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:lines="10"
                android:hint="@string/descricao_duvidas_atividade"
                android:textColor="@color/baseThemeColor"
                android:textColorHint="@color/baseThemeColor"/>


            <TextView
                android:id="@+id/txt_recebe_arquivo_ativ_concluida"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="380dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:hint="@string/recebe_duvidas_atividade_recebido"
                android:textAlignment="center"
                android:gravity="center"
                android:textColorHint="@color/baseThemeColor"
                android:textColor="@color/baseThemeColor"/>

            <Button
                android:id="@+id/btn_procurar_atividade_duvida"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="160dp"
                android:layout_marginLeft="160dp"
                android:layout_marginEnd="160dp"
                android:layout_marginRight="160dp"
                android:layout_marginTop="440dp"
                android:text="@string/btn_procurar_conteudo_cadastro_atividades"
                android:drawableLeft="@mipmap/internet"/>

            <Button
                android:id="@+id/btn_enviar_atividade_duvida"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="520dp"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginBottom="40dp"
                android:text="@string/enviar_atividade_duvida" />

        </RelativeLayout>

    </ScrollView>

    <include
        android:id="@+id/progressbar_informa_upload"
        android:visibility="gone"
        layout="@layout/upload_content_progressbar_homeschool"/>

</androidx.constraintlayout.widget.ConstraintLayout>
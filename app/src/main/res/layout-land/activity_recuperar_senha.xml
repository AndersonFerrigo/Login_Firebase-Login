<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.RecuperarSenhaActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/txt_recuperar_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/baseThemeColor"
            android:text="@string/txt_recuperar_senha_user"
            android:textAlignment="center"
            android:textSize="30sp"
            android:gravity="center_horizontal"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginLeft="100dp"
                    android:background="@mipmap/user"/>

                <EditText
                    android:id="@+id/edt_nome_recuperar_senha"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="160dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginEnd="100dp"
                    android:layout_marginRight="100dp"
                    android:hint="@string/txt_nome_recuperar_senha"
                    android:inputType="textEmailAddress"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="130dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginLeft="100dp"
                    android:background="@mipmap/at"/>

                <EditText
                        android:id="@+id/edt_email_recuperar_senha"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="130dp"
                        android:layout_marginStart="160dp"
                        android:layout_marginLeft="160dp"
                        android:layout_marginEnd="100dp"
                        android:layout_marginRight="100dp"
                        android:hint="@string/txt_email_recuperar_senha"
                        android:inputType="textEmailAddress"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="210dp"
                        android:layout_marginStart="100dp"
                        android:layout_marginLeft="100dp"
                        android:background="@mipmap/perfil"
                        android:contentDescription="@string/txt_descricao_imagem_perfil" />

                    <Spinner
                        android:id="@+id/spn_perfil"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="210dp"
                        android:layout_marginStart="160dp"
                        android:layout_marginLeft="160dp"
                        android:layout_marginEnd="100dp"
                        android:layout_marginRight="100dp"
                        android:layout_marginBottom="10dp"/>

                    <Button
                        android:id="@+id/btn_resetar_senha"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="300dp"
                        android:layout_marginStart="100dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="100dp"
                        android:layout_marginEnd="100dp"
                        android:background="@color/baseThemeColor"
                        android:textColor="@color/cor_branca"
                        android:text="@string/btn_recuperar_senha" />

                    <Button
                        android:id="@+id/btn_voltar_login"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="390dp"
                        android:layout_marginStart="100dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginEnd="100dp"
                        android:layout_marginRight="100dp"
                        android:text="@string/btn_retornar_login"
                        android:textColor="@color/baseThemeColor"
                        android:background="@drawable/shape_custom_button"/>

                </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".content.professor.DetalhesAtividadesRecebidasAlunoActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:text="Atividade Concluída"
        android:textSize="20sp"
        android:textColor="@color/baseThemeColor"
        android:textAlignment="center"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints,RtlCompat"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_detalhes"
            tools:layout_editor_absoluteX="117dp"
            tools:layout_editor_absoluteY="223dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="Titulo : "
            android:textAlignment="textEnd"
            android:textColor="@color/baseThemeColor"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/titulo_detalhes_atividade_concluida_aluno"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="50dp"
                android:hint="Titulo atividade concluida"
                android:paddingLeft="5dp"
                android:textAlignment="textStart"
                android:textColor="@color/baseThemeColor"
                android:textSize="15sp"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="90dp"
                android:gravity="center_vertical"
                android:text="Aluno(a) :"
                android:textAlignment="textEnd"
                android:textColor="@color/baseThemeColor"
                android:textSize="15sp"
                tools:ignore="RtlCompat" />

            <TextView
            android:id="@+id/nome_aluno_detalhes_atividade_concluida"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="95dp"
                android:layout_marginRight="50dp"
                android:hint="Nome do aluno atividade concluida"
                android:paddingLeft="5dp"
                android:textAlignment="textStart"
                android:textColor="@color/baseThemeColor"
                android:textSize="15sp"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="160dp"
                android:gravity="center_vertical"
                android:text="Turma :"
                android:textAlignment="textEnd"
                android:textColor="@color/baseThemeColor"
                android:textSize="15sp"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/turma_detalhes_atividade_concluida_aluno"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="165dp"
                android:layout_marginRight="50dp"
                android:gravity="center_vertical"
                android:hint="Turma atividade concluida"
                android:textAlignment="textStart"
                android:textColor="@color/baseThemeColor"
                android:textSize="15sp"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="230dp"
                android:gravity="center_vertical"
                android:text="Informações sobre a atividade entregue pelo aluno:"
                android:textAlignment="center"
                android:textColor="@color/baseThemeColor"
                android:textSize="15sp"
                tools:ignore="RtlCompat" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="300dp"
                android:src="@mipmap/download_documento" />

            <TextView
                android:id="@+id/caminho_arquivo_detalhes_atividade_concluida"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="300dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="@string/doc_detalhes_atividade_concluida"
                android:textAlignment="center"
                android:textColor="@color/baseThemeColor"
                android:textSize="15sp"
                tools:ignore="RtlCompat" />

            <Button
                android:id="@+id/btn_download_atividade_concluida"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="420dp"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="300dp"
                android:background="@drawable/shape_custom_button"
                android:text="Download"
                android:textColor="@color/baseThemeColor"/>
        
            <Button
                android:id="@+id/btn_fechar_detalhes_atividade_concluida"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="380dp"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/shape_details_buttons"
                android:gravity="center"
                android:text="Fechar"
                android:textColor="@color/cor_branca" />
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
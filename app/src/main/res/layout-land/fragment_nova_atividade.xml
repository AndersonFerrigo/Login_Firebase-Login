<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".content.professor.ui.nova_atividades.NovaAtividadeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp">

            <TextView
                android:id="@+id/txt_nome_professor_nova_atividade"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/nome_professor_cadastro_atividades"
                android:textColor="@color/baseThemeColor"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txt_materia_professor_nova_atividade"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/materia_professor_cadastro_atividades"
                android:textColor="@color/baseThemeColor"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/edt_titulo_cadastrar_atividade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:hint="@string/titulo_cadastro_atividades"
                android:textColor="@color/baseThemeColor"
                android:textColorHint="@color/baseThemeColor"/>

            <ImageView
                android:id="@+id/img_group_cadastrar_atividade"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/team"
                android:layout_marginTop="190dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>

            <Spinner
                android:id="@+id/spin_turma_atividade"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="190dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"/>


            <EditText
                android:id="@+id/edt_conteudo_cadastrar_atividade"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="260dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:hint="@string/description_cadastro_atividades"
                android:lines="10"
                android:textColor="@color/baseThemeColor"
                android:textColorHint="@color/baseThemeColor"/>

            <TextView
                android:id="@+id/txt_receive_archive"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="380dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:hint="Nenhum arquivo selecionado."
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/baseThemeColor"/>

            <Button
                android:id="@+id/btn_procurar_cadastrar_atividade"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="160dp"
                android:layout_marginLeft="160dp"
                android:layout_marginEnd="160dp"
                android:layout_marginRight="160dp"
                android:layout_marginTop="440dp"
                android:text="@string/btn_procurar_conteudo_cadastro_atividades"
                android:drawableLeft="@mipmap/internet"/>

            <Button
                android:id="@+id/btn_adicionar_nova_atividade"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="520dp"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginBottom="40dp"
                android:text="@string/btn_adicionar_conteudo_cadastro_atividades" />

        </RelativeLayout>

    </ScrollView>

    <include
        android:id="@+id/progressbar_informa_upload"
        android:visibility="gone"
        layout="@layout/upload_content_progressbar_homeschool"/>

</androidx.constraintlayout.widget.ConstraintLayout>
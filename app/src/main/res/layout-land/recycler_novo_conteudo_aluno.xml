<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/nova_atividade_shape">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titulo_novo_conteudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:hint="@string/titulo_conteudo_recebido"
            android:textAlignment="center"
            android:textSize="15dp"
            android:gravity="center_horizontal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginTop="40dp"
            android:background="@color/baseThemeColor" />


        <TextView
            android:id="@+id/nome_do_professor_conteudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="@string/nome_professor_conteudo_recebido"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/nome_materia_conteudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="@string/materia_conteudo_recebido"
            android:layout_marginBottom="5dp"/>

</com.google.android.material.card.MaterialCardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp">

    <TextView
        android:id="@+id/text_Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/login"
        android:textSize="30sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="@color/baseThemeColor"/>

    <EditText
        android:id="@+id/editEmail_Login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:hint="@string/email_Login"
        android:textColor="@color/baseThemeColor"
        android:textColorHint="@color/baseThemeColor"
        android:inputType="textEmailAddress"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/editSenha_Login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:hint="@string/senha_Login"
        android:autofillHints="none"
        android:textColor="@color/baseThemeColor"
        android:textColorHint="@color/baseThemeColor"
        android:inputType="textPassword"/>

    <Button
         android:id="@+id/btn_Logar"
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:layout_marginTop="400dp"
         android:background="@color/baseThemeColor"
         android:text="@string/logar"
         android:textSize="15sp"
         android:textColor="@color/cor_branca" />

    <Button
         android:id="@+id/btn_cadastrar"
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:layout_marginTop="480dp"
         android:background="@drawable/shape_custom_button"
         android:text="@string/cadastrar"
         android:textSize="15sp"
         android:textColor="@color/baseThemeColor" />

    <TextView
         android:id="@+id/textEsqueciaSenha"
         android:layout_width="200dp"
         android:layout_height="23dp"
         android:layout_marginTop="550dp"
         android:layout_marginStart="200dp"
         android:layout_marginBottom="20dp"
         android:text="@string/esqueci_a_senha"
         android:textColor="@color/baseThemeColor"
         android:layout_marginLeft="200dp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".content.professor.DetalhesDuvidasAtividadeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_detalhes">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:text="Duvidas Atividade"
            android:textSize="20sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="10dp"
            android:text="Titulo : "
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="textEnd"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/titulo_detalhes_duvida_atividade"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:hint="Titulo duvida sobre atividade"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="10dp"
            android:text="Aluno(a) :"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="textEnd"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/nome_aluno_detalhes_duvida_atividade"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="165dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:hint="Nome aluno duvidas atividade"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="10dp"
            android:text="Materia :"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="textEnd"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/materia_detalhes_duvida_atividade"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:hint="Materia duvida sobre atividade"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="textStart"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="20dp"
            android:text="Dúvidas referente a atividade :"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="viewStart"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/descricao_detalhes_duvidas_atividade"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="@string/description_cadastro_atividades"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="15dp"
            android:text="Arquivo referente a dávida :"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="viewStart"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="450dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/download_documento" />

        <TextView
            android:id="@+id/caminho_arquivo_detalhes_duvida_atividade"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="450dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="10dp"
            android:text="Atividade em dúvida"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/btn_download_duvida_atividade"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="450dp"
            android:layout_marginStart="250dp"
            android:layout_marginLeft="130dp"
            android:background="@drawable/shape_custom_button"
            android:text="Download"
            android:textColor="@color/baseThemeColor"/>


        <Button
            android:id="@+id/btn_fechar_detalhes_duvida_atividade"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:background="@drawable/shape_details_buttons"
            android:text="Fechar"
            android:textColor="@color/cor_branca"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
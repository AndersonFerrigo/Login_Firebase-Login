<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".content.aluno.ui.duvidas_atividade.DuvidasAtividadesConcluidasFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <EditText
            android:id="@+id/edt_titulo_atividade_concluida"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:lines="1"
            android:hint="@string/titulo_atividades_concluida"/>

        <ImageView
            android:id="@+id/img_group_cadastrar_atividade"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/team"
            android:layout_marginTop="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"/>

        <Spinner
            android:id="@+id/spin_turma_atividade"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="105dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"/>


        <ImageView
            android:id="@+id/img_materia_professor_ic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="160dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/folder"/>
        <Spinner
            android:id="@+id/spn_materia_professor"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginTop="165dp"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:entries="@string/hint_spinner_materia_professor"/>


        <TextView
            android:id="@+id/txt_recebe_arquivo_ativ_concluida_"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="220dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:hint="@string/caminho_arquivo_atividade_concluida"
            android:textAlignment="center"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_procurar_atividade_concluida"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="300dp"
            android:text="@string/btn_procurar_arquivo_atividade_concluida"
            android:drawableLeft="@mipmap/internet"
            />

        <ProgressBar
            android:id="@+id/simpleProgressBar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="300dp"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"/>

        <EditText
            android:id="@+id/edt_duvidas_atividades_enviada"
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:layout_marginTop="380dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:lines="20"
            android:hint="@string/titulo_atividades_concluida"/>

        <Button
            android:id="@+id/btn_enviar_atividade_concluida"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="500dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/btn_enviar_atividade_concluida" />
    </RelativeLayout>

</FrameLayout>
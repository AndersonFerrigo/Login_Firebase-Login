<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/side_nav_bar"
    tools:context=".content.professor.ui.duvidas_alunos_conteudos.DuvidasAlunosConteudoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"
        android:background="@color/cor_branca"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_materia_professor_ic"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/folder"/>

        <Spinner
            android:id="@+id/spn_materia_professor"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/content_nova_atividade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_duvidas_aluno_conteudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>

        <ImageView
            android:id="@+id/img_notifica_sem_duvidas_conteudo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="140dp"
            android:background="@mipmap/sem_notificacao"/>

        <TextView
            android:id="@+id/txt_informa_sem_duvidas_conteudo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/informa_sem_duvidas_conteudo_aluno_recebidas"
            android:textSize="15sp"
            android:textAlignment="center"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/cor_branca"/>
    </RelativeLayout>

</RelativeLayout>
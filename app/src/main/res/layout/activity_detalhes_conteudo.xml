<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".content.aluno.DetalhesConteudoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_detalhes">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:text="Detalhes Conteúdo"
            android:textSize="20sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="90dp"
            android:gravity="center_vertical"
            android:text="Titulo : "
            android:textAlignment="textEnd"
            android:textColor="@color/baseThemeColor"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/titulo_detalhes_novo_conteudo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="95dp"
            android:layout_marginRight="10dp"
            android:hint="@string/titulo_atividade_recebida_professor"
            android:paddingLeft="5dp"
            android:textAlignment="textStart"
            android:textColor="@color/baseThemeColor"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="160dp"
            android:gravity="center_vertical"
            android:text="Professor(a) :"
            android:textAlignment="textEnd"
            android:textColor="@color/baseThemeColor"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/nome_professor_detalhes_novo_conteudo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="165dp"
            android:layout_marginRight="10dp"
            android:hint="@string/nome_professor_atividade_recebida"
            android:paddingLeft="5dp"
            android:textAlignment="textStart"
            android:textColor="@color/baseThemeColor"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="230dp"
            android:gravity="center_vertical"
            android:text="Materia :"
            android:textAlignment="textEnd"
            android:textColor="@color/baseThemeColor"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/materia_detalhes_novo_conteudo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="230dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:hint="@string/materia_atividade_recebida_professor"
            android:textAlignment="textStart"
            android:textColor="@color/baseThemeColor"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="270dp"
            android:gravity="center_vertical"
            android:text="Informações sobre atividade:"
            android:textAlignment="center"
            android:textColor="@color/baseThemeColor"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/descricao_detalhes_novo_conteudo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="310dp"
            android:layout_marginRight="5dp"
            android:hint="@string/description_cadastro_atividades"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAlignment="textStart"
            android:textColor="@color/baseThemeColor"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="410dp"
            android:gravity="center_vertical"
            android:text="Arquivo nova atividade :"
            android:textAlignment="center"
            android:textColor="@color/baseThemeColor"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="450dp"
            android:src="@mipmap/download_documento" />

        <TextView
            android:id="@+id/caminho_arquivo_detalhes_novo_conteudo"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="450dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="Novo conteúdo"
            android:textAlignment="center"
            android:textColor="@color/baseThemeColor"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/btn_download_novo_conteudo"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="250dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="450dp"
            android:background="@drawable/shape_custom_button"
            android:text="Download"
            android:textColor="@color/baseThemeColor" />


        <Button
            android:id="@+id/btn_fechar_detalhes_novo_conteudo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:background="@drawable/shape_details_buttons"
            android:text="Fechar"
            android:textColor="@color/cor_branca"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".content.professor.DetalhesAtividadesRecebidasAlunoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_detalhes">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:text="Atividade Concluida"
            android:textSize="20sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="10dp"
            android:text="Titulo : "
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="textEnd"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/titulo_detalhes_atividade_concluida_aluno"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:hint="Titulo atividade concluida"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="textStart"
            android:gravity="center_horizontal"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="10dp"
            android:text="Aluno(a) :"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="textEnd"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/nome_aluno_detalhes_atividade_concluida"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="165dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:hint="Nome do aluno atividade concluida"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="textStart"

            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="10dp"
            android:text="Turma :"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="textEnd"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/turma_detalhes_atividade_concluida_aluno"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:hint="Turma atividade concluida"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="textStart"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="290dp"
            android:text="Arquivo :"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="340dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/download_documento" />

        <TextView
            android:id="@+id/caminho_arquivo_detalhes_atividade_concluida"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="10dp"
            android:text="@string/doc_detalhes_atividade_concluida"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/btn_download_atividade_concluida"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="340dp"
            android:layout_marginStart="250dp"
            android:layout_marginLeft="130dp"
            android:background="@drawable/shape_custom_button"
            android:text="Download"
            android:textColor="@color/baseThemeColor"/>
        
        <Button
            android:id="@+id/btn_fechar_detalhes_atividade_concluida"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:background="@drawable/shape_details_buttons"
            android:text="Fechar"
            android:textColor="@color/cor_branca"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
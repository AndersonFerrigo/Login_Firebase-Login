<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".content.professor.ui.novo_conteudo.NovoConteudoFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <ImageView
                android:id="@+id/img_group_cadastrar_conteudo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/team"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"/>

            <Spinner
                android:id="@+id/spin_turma_conteudo"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/edt_titulo_cadastrar_conteudo"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:hint="@string/titulo_cadastro_conteudo"/>

            <EditText
                android:id="@+id/edt_cadastrar_conteudo"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:layout_marginTop="140dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:lines="10"
                android:hint="@string/description_cadastro_conteudo"/>

            <TextView
                android:id="@+id/txt_receive_content"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="280dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:hint="@string/caminho_arquivo_conteudo"
                android:textAlignment="center"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_procurar_cadastrar_conteudo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="380dp"
                android:background="@color/baseThemeColor"
                android:text="@string/btn_procurar_conteudo_cadastro_conteudo"
                android:drawableLeft="@mipmap/internet"/>

            <ProgressBar
                android:id="@+id/simpleProgressBar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="300dp"
                android:visibility="invisible"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/btn_adicionar_novo_conteudo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="470dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/baseThemeColor"
                android:text="@string/btn_adicionar_conteudo_cadastro_conteudo" />
        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ResetSenha">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp">

    <TextView
        android:id="@+id/resetar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/baseThemeColor"
        android:text="@string/resetar_senha"
        android:textAlignment="center"
        android:textSize="30sp"
        android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/edit_email_reset"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="@string/txt_email_resetar_senha"
            android:inputType="textEmailAddress"/>

        <Button
        android:id="@+id/btn_resetar_senha"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/baseThemeColor"
        android:textColor="@color/cor_branca"
        android:text="@string/btn_resetar_senha" />

        <Button
            android:id="@+id/btn_voltar_login"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="370dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/btn_retornar_login"
            android:background="@drawable/shape_custom_button"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
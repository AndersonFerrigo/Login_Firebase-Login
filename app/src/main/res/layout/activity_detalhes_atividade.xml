<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".content.aluno.DetalhesAtividadeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_detalhes">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/detalhes_atividade"
            android:textSize="20sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="30dp"
            android:text="Titulo : "
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="textEnd"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/titulo_detalhes_nova_atividade"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="10dp"
            android:hint="@string/titulo_atividade_recebida_professor"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="textStart"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="30dp"
            android:text="Professor(a) :"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="textEnd"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/nome_professor_detalhes_nova_atividade"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="10dp"
            android:hint="@string/nome_professor_atividade_recebida"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="textStart"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="30dp"
            android:text="Materia :"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="textEnd"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/materia_detalhes_nova_atividade"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="10dp"
            android:hint="@string/materia_atividade_recebida_professor"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="textStart"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="210dp"
            android:text="Descrição :"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/descricao_detalhes_nova_atividade"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:hint="@string/description_cadastro_atividades"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="380dp"
            android:text="Arquivo :"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/caminho_arquivo_detalhes_nova_atividade"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="@string/caminho_arquivo_atividades"
            android:textSize="15sp"
            android:textColor="@color/baseThemeColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/btn_fechar_detalhes_nova_atividade"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:background="@drawable/shape_details_buttons"
            android:text="Fechar"
            android:textColor="@color/cor_branca"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
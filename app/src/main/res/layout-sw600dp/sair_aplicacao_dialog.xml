<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="600dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_custom_button">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:text="HomeSchool"
        android:textColor="@color/cor_branca"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="@color/baseThemeColor"
        android:gravity="center_horizontal|center_vertical"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="80dp"
        android:text="Deseja sair da aplicação?"
        android:textColor="@color/baseThemeColor"
        android:textSize="30sp"
        android:textAlignment="center"
        tools:ignore="MissingConstraints"
        android:gravity="center_horizontal|center_vertical" />

        <Button
            android:id="@+id/btn_fechar_dialog"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:layout_marginTop="220dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:text="Cancelar"
            android:textSize="30sp"
            android:textColor="@color/baseThemeColor"
            android:background="@drawable/shape_custom_button"/>

        <Button
            android:id="@+id/btn_sair_homeschool"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:layout_marginTop="220dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="330dp"
            android:layout_marginRight="20dp"
            android:text="Sair"
            android:textSize="30sp"
            android:textColor="@color/baseThemeColor"
            android:background="@drawable/shape_custom_button"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
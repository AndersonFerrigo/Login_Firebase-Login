<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/nova_atividade_shape">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/titulo_nova_atividade_recebida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:hint="@string/titulo_atividade_recebida_professor"
                android:textSize="30sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4sp"
            android:layout_marginTop="4dp"
            android:background="@color/baseThemeColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nome_do_aluno_ativ_recebida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:hint="@string/nome_aluno_atividade_recebida_professor"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/nome_materia_atividade_recebida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:hint="@string/materia_atividade_recebida_professor"
                android:textSize="30sp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4sp"
            android:layout_marginTop="4dp"
            android:background="@color/baseThemeColor" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
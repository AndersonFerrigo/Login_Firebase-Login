<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/side_nav_bar"
    tools:context=".content.professor.ui.duvidas_alunos_atividades.DuvidasAlunosAtividadesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingBottom="5dp"
        android:background="@color/cor_branca"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_materia_professor_ic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="20dp"
            android:background="@mipmap/folder"/>

        <Spinner
            android:id="@+id/spn_materia_professor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="180dp"
            android:layout_marginLeft="180dp"
            android:layout_marginEnd="140dp"
            android:layout_marginRight="140dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/content_nova_atividade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_duvidas_aluno_tarefas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>

        <ImageView
            android:id="@+id/img_notifica_sem_duvidas_atividade"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="290dp"
            android:background="@mipmap/sem_notificacao"/>

        <TextView
            android:id="@+id/txt_informa_sem_duvidas_atividade"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="530dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/informa_sem_duvidas_atividades_aluno_recebidas"
            android:textSize="35sp"
            android:textAlignment="center"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/cor_branca"/>
    </RelativeLayout>

</RelativeLayout>
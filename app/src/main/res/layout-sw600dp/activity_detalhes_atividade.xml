<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".content.aluno.DetalhesAtividadeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_detalhes"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="223dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="@string/detalhes_atividade"
            android:textAlignment="center"
            android:textColor="@color/baseThemeColor"
            android:textSize="40sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="120dp"
            android:gravity="center_vertical"
            android:text="Titulo : "
            android:textAlignment="textEnd"
            android:textColor="@color/baseThemeColor"
            android:textSize="30sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/titulo_detalhes_nova_atividade"
            android:layout_width="560dp"
            android:layout_height="50dp"
            android:layout_marginLeft="430dp"
            android:layout_marginTop="130dp"
            android:layout_marginRight="10dp"
            android:hint="@string/titulo_atividade_recebida_professor"
            android:paddingLeft="5dp"
            android:textAlignment="textStart"
            android:textColor="@color/baseThemeColor"
            android:textSize="30sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="220dp"
            android:gravity="center_vertical"
            android:text="Professor(a) :"
            android:textAlignment="textEnd"
            android:textColor="@color/baseThemeColor"
            android:textSize="30sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/nome_professor_detalhes_nova_atividade"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="230dp"
            android:layout_marginRight="10dp"
            android:hint="@string/nome_professor_atividade_recebida"
            android:paddingLeft="5dp"
            android:textAlignment="textStart"
            android:textColor="@color/baseThemeColor"
            android:textSize="30sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="600dp"
            android:layout_marginTop="220dp"
            android:gravity="center_vertical"
            android:text="Materia :"
            android:textAlignment="textEnd"
            android:textColor="@color/baseThemeColor"
            android:textSize="30sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/materia_detalhes_nova_atividade"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_marginLeft="740dp"
            android:layout_marginTop="230dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:hint="@string/materia_atividade_recebida_professor"
            android:textAlignment="textStart"
            android:textColor="@color/baseThemeColor"
            android:textSize="30sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="310dp"
            android:gravity="center_vertical"
            android:text="Informações sobre atividade:"
            android:textAlignment="center"
            android:textColor="@color/baseThemeColor"
            android:textSize="30sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/descricao_detalhes_nova_atividade"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="370dp"
            android:layout_marginRight="30dp"
            android:hint="@string/description_cadastro_atividades"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAlignment="textStart"
            android:textColor="@color/baseThemeColor"
            android:textSize="30sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_marginTop="520dp"
            android:gravity="center_vertical"
            android:text="Arquivo nova atividade :"
            android:textAlignment="center"
            android:textColor="@color/baseThemeColor"
            android:textSize="30sp"
            tools:ignore="RtlCompat" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="600dp"
            android:src="@mipmap/download_documento" />

        <TextView
            android:id="@+id/caminho_arquivo_detalhes_nova_atividade"
            android:layout_width="550dp"
            android:layout_height="50dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="620dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="Nova atividade"
            android:textAlignment="center"
            android:textColor="@color/baseThemeColor"
            android:textSize="30sp"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/btn_download_nova_atividade"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginStart="730dp"
            android:layout_marginLeft="730dp"
            android:layout_marginTop="620dp"
            android:background="@drawable/shape_custom_button"
            android:text="Download"
            android:textColor="@color/baseThemeColor"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn_fechar_detalhes_nova_atividade"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="700dp"
            android:layout_marginRight="230dp"
            android:background="@drawable/shape_details_buttons"
            android:gravity="center"
            android:text="Fechar"
            android:textColor="@color/cor_branca"
            android:textSize="30sp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>